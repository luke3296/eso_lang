<Window x:Class="blaise.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blaise"
        mc:Ignorable="d"
        Title="Blaise: Output window" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Compiler output">
                <avalonEdit:TextEditor
                    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                    Name="compilerOutputEditor"
                    FontFamily="Consolas"
                    ShowLineNumbers="True"
                    FontSize="10pt"
                    IsReadOnly="True"
                    />
            </TabItem>
            <TabItem Header="Transpiled C code">
                <Label>Here you can view the transpiled C that the compiler outputs, which is then turned into the executable.</Label>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
