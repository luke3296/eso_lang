<Window x:Class="blaise.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blaise"
        mc:Ignorable="d"
        Title="Blaise: Output window" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Compiler output">
                <Label>Here we'll show the output of the compiler, any errors, warnings etc</Label>
            </TabItem>
            <TabItem Header="Transpiled C code">
                <Label>Here you can view the transpiled C that the compiler outputs, which is then turned into the executable.</Label>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
